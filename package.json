{
  "name": "ts-koa-starter",
  "version": "1.0.0",
  "description": "一个简单的koa+typescript+typeorm的起手式",
  "tags": [
    "orm",
    "typescript",
    "koa"
  ],
  "scripts": {
    "start": "nodemon",
    "build": "rm -rf dist && tsc",
    "pro": "pm2 start ecosystem.config.js --env production",
    "restart": "pm2 restart ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js"
  },
  "dependencies": {
    "@koa/router": "^13.1.0",
    "dotenv": "^16.4.7",
    "koa": "^2.16.0",
    "koa-bodyparser": "^4.4.1"
  },
  "devDependencies": {
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.13.5",
    "nodemon": "^3.1.9",
    "pm2": "^5.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
